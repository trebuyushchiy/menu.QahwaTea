        const tabs = document.getElementById("tabs");
        const menu = document.getElementById("menu");

        // Создаем вкладки и секции меню
        Object.keys(menuData).forEach((category, index) => {
            const button = document.createElement("button");
            button.innerText = category;
            button.onclick = () => showCategory(category, button);
            if (index === 0) button.classList.add("active");
            tabs.appendChild(button);

            const section = document.createElement("div");
            section.classList.add("menu-section");
            if (index === 0) section.classList.add("active");
            section.id = category;

            menuData[category].forEach(item => {
                const div = document.createElement("div");
                div.classList.add("menu-item");
                div.innerHTML = `<span>${item.name}</span><span class="price">${item.price}</span>`;
                section.appendChild(div);
            });

            menu.appendChild(section);
        });

        function showCategory(category, btn) {
            document.querySelectorAll(".menu-section").forEach(sec => sec.classList.remove("active"));
            document.querySelectorAll("#tabs button").forEach(b => b.classList.remove("active"));
            document.getElementById(category).classList.add("active");
            btn.classList.add("active");
        }

        // Поиск по меню
        document.getElementById("search").addEventListener("input", e => {
            const searchValue = e.target.value.toLowerCase();
            let found = false;

            document.querySelectorAll(".menu-section").forEach(section => {
                let matches = 0;
                section.querySelectorAll(".menu-item").forEach(item => {
                    const visible = item.innerText.toLowerCase().includes(searchValue);
                    item.style.display = visible ? "flex" : "none";
                    if (visible) matches++;
                });
                section.style.display = matches > 0 || searchValue ? "grid" : "none";
                if (matches > 0) found = true;
            });

            if (!searchValue) {
                document.querySelectorAll(".menu-section").forEach((sec, i) => {
                    sec.style.display = i === 0 ? "grid" : "none";
                });
            }
        });
    </script>
